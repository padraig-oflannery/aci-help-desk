{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "jsx": "react-jsx",
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@/*": [
                "./src/renderer/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-electron"
    ]
}