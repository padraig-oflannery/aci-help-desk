    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "build:vite": "tsc && vite build",
        "preview": "vite preview",
        "test": "bun test",
        "electron:dev": "vite build && electron .",
        "electron:build": "vite build && electron-builder"
