        "vite-plugin-electron-renderer": "^0.14.0"
    },
    "build": {
        "appId": "com.company.helpdesk-pro",
        "productName": "IT Helpdesk Pro",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist",
            "dist-electron"
        ],
        "publish": {
            "provider": "github",
            "owner": "YOUR_GITHUB_USERNAME",
            "repo": "help-desk-desktop-app"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
