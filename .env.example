# ===================================
# IT Helpdesk Pro - Environment Variables
# ===================================

# Backend Server
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database (PostgreSQL via Docker)
DATABASE_URL=postgresql://helpdesk:helpdesk_password@localhost:5432/helpdesk_dev

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# S3/MinIO Storage (Development)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=helpdesk-storage
S3_FORCE_PATH_STYLE=true

# Cloudflare R2 Storage (Production)
# R2_ENDPOINT=https://[account-id].r2.cloudflarestorage.com
# R2_ACCESS_KEY_ID=your-r2-access-key
# R2_SECRET_ACCESS_KEY=your-r2-secret-key

# Resend Email Service
RESEND_API_KEY=re_dummy_api_key_replace_me
EMAIL_FROM=IT Helpdesk <noreply@yourdomain.com>

# Frontend (Electron Renderer)
VITE_API_URL=http://localhost:3000
